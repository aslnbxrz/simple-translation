{
  "name": "aslnbxrz/simple-translation",
  "type": "library",
  "license": "MIT",
  "description": "Lightweight file-first translations with DB backup for Laravel. Per-scope export and scanning.",
  "keywords": [
    "laravel",
    "translation",
    "i18n",
    "l10n",
    "scanner"
  ],
  "version": "2.0.0",
  "require": {
    "php": "^8.1",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "illuminate/filesystem": "^10.0|^11.0|^12.0",
    "illuminate/database": "^10.0|^11.0|^12.0"
  },
  "autoload": {
    "psr-4": {
      "Aslnbxrz\\SimpleTranslation\\": "src/"
    },
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Aslnbxrz\\SimpleTranslation\\SimpleTranslationServiceProvider"
      ]
    }
  },
  "authors": [
    {
      "name": "aslnbxrz",
      "email": "bexruz.aslonov1@gmail.com"
    }
  ]
}